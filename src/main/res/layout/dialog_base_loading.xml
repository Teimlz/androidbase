<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="@dimen/space_240"
        android:layout_width="@dimen/space_240">

    <ProgressBar
            android:id="@+id/dialog_loading"
            android:layout_marginTop="@dimen/space_50"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_70"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/dialog_base_loading"
            android:indeterminateOnly="true">
    </ProgressBar>

    <TextView
            android:id="@+id/dialog_loading_tip"
            android:text="@string/dialog_base_loading_tips"
            android:textSize="@dimen/font_size_32px"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </TextView>

</LinearLayout>
